<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="qpay" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>QPay Payment</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1">
                    <label>Title</label>
                </field>
                <field id="base_url" translate="label" type="text" sortOrder="3" showInDefault="1">
                    <label>API Base URL</label>
                </field>
                <field id="username" translate="label" type="text" sortOrder="4" showInDefault="1">
                    <label>Username</label>
                </field>
                <field id="password" translate="label" type="obscure" sortOrder="5" showInDefault="1">
                    <label>Password</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="invoice_code" translate="label" type="text" sortOrder="6" showInDefault="1">
                    <label>Invoice Code</label>
                </field>
                <field id="callback_url" translate="label" type="text" sortOrder="7" showInDefault="1">
                    <label>Callback URL</label>
                </field>
                <field id="order_status" translate="label" type="select" sortOrder="8" showInDefault="1">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\Processing</source_model>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="9" showInDefault="1">
                    <label>Sort Order</label>
                </field>
            </group>
        </section>
    </system>
</config>
